@model List<DepartmentViewModel>
@{
	ViewBag.Title = "Department List";
}
  <h1>@ViewBag.Title</h1>
<a asp-controller="Department" asp-action="AddDepartment" class="btn btn-primary">Create</a>
<form method="post">
	<table class="table table-responsive table-hover">
		<thead>
			<tr>
				<th>ID</th>
				<th>Name</th>
				<th>Location</th>
			</tr>
		</thead>
    <tbody>
			@if (Model != null && Model.Count() > 0)
			{
				foreach (var department in Model)
				{
					<tr>
						<td>@department.Id</td>
						<td>@department.Name</td>
						<td>@department.Location</td>
						<td>
							<div>
								<a asp-action="Edit" asp-controller="Department" asp-route-id="@department.Id" class="btn btn-primary">Edit</a>
								<a asp-action="Delete" asp-controller="Department" asp-route-id="@department.Id" class="btn btn-outline-danger">Delete</a>
							</div>
						</td>
					</tr>
				}
			}
			else
			{
				<tr>
					<td colspan="3">No records found.</td>
				</tr>
			}
	</tbody>
</table>

</form>

	


